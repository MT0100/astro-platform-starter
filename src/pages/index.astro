      <!-- 3D Car Model -->
      <div id="models" class="w-full max-w-5xl mx-auto mt-20 fade-in delay-300">
        <h2 class="orbitron text-3xl font-bold mb-8 text-center">
          <span class="neon-blue-glow">ASIMOV</span> <span class="red-glow">NEXUS</span>
        </h2>
        <CarModel modelId="carModel" leftBtnId="rotateLeft" rightBtnId="rotateRight" />
