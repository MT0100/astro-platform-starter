        :root {
            --dark-bg: #0b0f1a;
            --neon-blue: #00ffff;
            --red-highlight: #ff1b1b;
            --white: #ffffff;
        }
        
        body {
            font-family: 'Exo 2', sans-serif;
            background-color: var(--dark-bg);
            color: var(--white);
            overflow-x: hidden;
            margin: 0;
            padding: 0;
        }
        
        .orbitron {
            font-family: 'Orbitron', sans-serif;
        }
        
        .glassmorphism {
            background: rgba(255, 255, 255, 0.05);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 10px;
        }
        
        .neon-blue-glow {
            text-shadow: 0 0 10px var(--neon-blue), 0 0 20px var(--neon-blue), 0 0 30px var(--neon-blue);
        }
        
        .red-glow {
            text-shadow: 0 0 10px var(--red-highlight), 0 0 20px var(--red-highlight);
        }
        
        .loading-screen {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: var(--dark-bg);
            z-index: 9999;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            transition: opacity 1s ease-out;
        }
        
        .speedometer {
            width: 300px;
            height: 300px;
            position: relative;
            margin-bottom: 30px;
        }
        
        .speedometer-circle {
            width: 100%;
            height: 100%;
            border-radius: 50%;
            border: 4px solid rgba(0, 255, 255, 0.3);
            position: relative;
            display: flex;
            justify-content: center;
            align-items: center;
        }
        
        .speedometer-needle {
            position: absolute;
            width: 4px;
            height: 130px;
            background: linear-gradient(to top, var(--neon-blue), transparent);
            bottom: 50%;
            left: calc(50% - 2px);
            transform-origin: bottom center;
            transform: rotate(-90deg);
            transition: transform 0.1s ease-out;
            z-index: 2;
        }
        
        .speedometer-center {
            width: 30px;
            height: 30px;
            background-color: var(--neon-blue);
            border-radius: 50%;
            box-shadow: 0 0 20px var(--neon-blue);
            z-index: 3;
        }
        
        .speed-value {
            position: absolute;
            bottom: 80px;
            font-size: 48px;
            font-weight: bold;
            color: var(--neon-blue);
            text-shadow: 0 0 10px var(--neon-blue);
        }
        
        .speed-unit {
            position: absolute;
            bottom: 60px;
            font-size: 18px;
            color: var(--neon-blue);
        }
        
        .car-model-container {
            position: relative;
            width: 100%;
            height: 400px;
            margin: 50px 0;
            perspective: 1000px;
        }
        
        .car-model {
            width: 100%;
            height: 100%;
            position: relative;
            transform-style: preserve-3d;
            transition: transform 0.5s ease;
        }
        
        .car-face {
            position: absolute;
            width: 100%;
            height: 100%;
            display: flex;
            justify-content: center;
            align-items: center;
            backface-visibility: hidden;
        }
        
        .gallery {
            width: 100%;
            overflow: hidden;
            position: relative;
            height: 250px;
            margin: 30px 0;
        }
        
        .gallery-track {
            display: flex;
            transition: transform 0.5s ease-out;
        }
        
        .gallery-item {
            min-width: 300px;
            height: 200px;
            margin: 0 15px;
            border-radius: 10px;
            overflow: hidden;
        }
        
        .tech-spec {
            opacity: 0.3;
            transition: opacity 0.5s ease, transform 0.5s ease;
            transform: translateY(10px);
        }
        
        .tech-spec.active {
            opacity: 1;
            transform: translateY(0);
            color: var(--red-highlight);
            text-shadow: 0 0 10px rgba(255, 27, 27, 0.5);
        }
        
        .button-glow {
            box-shadow: 0 0 15px var(--red-highlight);
            transition: box-shadow 0.3s ease, transform 0.3s ease;
        }
        
        .button-glow:hover {
            box-shadow: 0 0 25px var(--red-highlight), 0 0 40px rgba(255, 27, 27, 0.4);
            transform: translateY(-2px);
        }
        
        .nav-link {
            position: relative;
            overflow: hidden;
        }
        
        .nav-link::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            width: 0;
            height: 2px;
            background-color: var(--neon-blue);
            transition: width 0.3s ease;
        }
        
        .nav-link:hover::after {
            width: 100%;
        }
        
        .rotate-controls {
            display: flex;
            justify-content: center;
            gap: 20px;
            margin-top: 20px;
        }
        
        .rotate-btn {
            background: rgba(0, 255, 255, 0.1);
            border: 1px solid var(--neon-blue);
            color: var(--neon-blue);
            padding: 8px 16px;
            border-radius: 20px;
            cursor: pointer;
            transition: all 0.3s ease;
        }
        
        .rotate-btn:hover {
            background: rgba(0, 255, 255, 0.2);
            box-shadow: 0 0 15px rgba(0, 255, 255, 0.5);
        }
        
        /* Grid lines background */
        .grid-bg {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-image: 
                linear-gradient(rgba(0, 255, 255, 0.05) 1px, transparent 1px),
                linear-gradient(90deg, rgba(0, 255, 255, 0.05) 1px, transparent 1px);
            background-size: 40px 40px;
            z-index: -1;
