    function updateLanguage() {
      const t = translations[currentLanguage];
      
      // Update all text elements
      document.querySelectorAll('[data-nav]').forEach(el => {
        const key = el.getAttribute('data-nav');
        if (t[key]) el.textContent = t[key];
      });
      
      document.querySelectorAll('[data-text]').forEach(el => {
        const key = el.getAttribute('data-text');
        if (t[key]) el.textContent = t[key];
      });
      
      // Update language button
      document.querySelector('[data-text="langBtn"]').textContent = currentLanguage.toUpperCase();
    }
    
    function toggleLanguage() {
      currentLanguage = currentLanguage === 'tr' ? 'en' : 'tr';
      updateLanguage();
    }
    
    // Make functions global
    window.toggleLanguage = toggleLanguage;
    window.showPage = function(pageId) {
      // Page navigation logic
      const pages = document.querySelectorAll('.page-content');
      pages.forEach(page => {
        page.classList.add('hidden');
      });
      
      const targetPage = document.getElementById(pageId + '-page');
      if (targetPage) {
        targetPage.classList.remove('hidden');
      }
    };
    
    // Initialize everything when DOM is loaded
    document.addEventListener('DOMContentLoaded', function() {
      // Loading screen animation
      const loadingScreen = document.getElementById('loadingScreen');
      const speedNeedle = document.getElementById('speedNeedle');
      const speedValue = document.getElementById('speedValue');
      let speed = 0;
      let direction = 1;
      
      const speedInterval = setInterval(() => {
        speed += 2 * direction;
        
        if (speed >= 100) {
          direction = -1;
        } else if (speed <= 0 && direction === -1) {
          clearInterval(speedInterval);
          setTimeout(() => {
            loadingScreen.style.opacity = '0';
            setTimeout(() => {
              loadingScreen.style.display = 'none';
            }, 1000);
          }, 500);
        }
        
        const rotation = -90 + (speed * 1.8);
        speedNeedle.style.transform = `rotate(${rotation}deg)`;
        speedValue.textContent = Math.round(speed);
      }, 20);
      
      // Initialize car rotation
      function initCarRotation(modelId, leftBtnId, rightBtnId) {
        const carModel = document.getElementById(modelId);
        let currentRotation = 0;
        
        document.getElementById(leftBtnId)?.addEventListener('click', function() {
          currentRotation -= 90;
          carModel.style.transform = `rotateY(${currentRotation}deg)`;
        });
        
        document.getElementById(rightBtnId)?.addEventListener('click', function() {
          currentRotation += 90;
          carModel.style.transform = `rotateY(${currentRotation}deg)`;
        });
      }
      
      initCarRotation('carModel', 'rotateLeft', 'rotateRight');
      initCarRotation('techCarModel', 'techRotateLeft', 'techRotateRight');
      
