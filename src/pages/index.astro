        // Loading screen with speedometer animation
        document.addEventListener('DOMContentLoaded', function() {
            const loadingScreen = document.getElementById('loadingScreen');
            const speedNeedle = document.getElementById('speedNeedle');
            const speedValue = document.getElementById('speedValue');
            let speed = 0;
            let direction = 1; // 1 for increasing, -1 for decreasing
            
            // Speedometer animation
            const speedInterval = setInterval(() => {
                speed += 2 * direction;
                
                if (speed >= 100) {
                    direction = -1;
                } else if (speed <= 0 && direction === -1) {
                    clearInterval(speedInterval);
                    setTimeout(() => {
                        loadingScreen.style.opacity = '0';
                        setTimeout(() => {
                            loadingScreen.style.display = 'none';
                        }, 1000);
                    }, 500);
                }
                
                // Update speedometer
                const rotation = -90 + (speed * 1.8); // -90 to 90 degrees
                speedNeedle.style.transform = `rotate(${rotation}deg)`;
                speedValue.textContent = Math.round(speed);
            }, 20);
            
            // Create particles
            const particles = document.getElementById('particles');
            for (let i = 0; i < 50; i++) {
                createParticle();
            }
            
            // Initialize car rotation
            initCarRotation('carModel', 'rotateLeft', 'rotateRight');
            initCarRotation('techCarModel', 'techRotateLeft', 'techRotateRight');
            
            // Initialize gallery auto-scroll
            initGallery();
            
            // Initialize tech specs highlighting
            initTechSpecs();
            
            // Scroll to tech details when button is clicked
            document.getElementById('techDetailsBtn').addEventListener('click', function() {
                document.getElementById('tech').scrollIntoView({ behavior: 'smooth' });
            });
        });
        
        // Create a single particle
        function createParticle() {
            const particles = document.getElementById('particles');
            const particle = document.createElement('div');
            particle.classList.add('particle');
            
            // Random size between 1-3px
            const size = Math.random() * 2 + 1;
            particle.style.width = `${size}px`;
            particle.style.height = `${size}px`;
            
            // Random position
            particle.style.left = `${Math.random() * 100}%`;
            particle.style.top = `${Math.random() * 100}%`;
            
            particles.appendChild(particle);
            
            // Animate particle
            animateParticle(particle);
        }
        
        // Animate a particle
        function animateParticle(particle) {
            const duration = Math.random() * 15000 + 10000; // 10-25 seconds
            const xDistance = (Math.random() - 0.5) * 100; // -50 to 50 vw
            const yDistance = (Math.random() - 0.5) * 100; // -50 to 50 vh
            
            particle.style.transition = `transform ${duration}ms linear, opacity ${duration}ms ease-in-out`;
            particle.style.transform = `translate(${xDistance}vw, ${yDistance}vh)`;
            particle.style.opacity = Math.random() * 0.5;
            
            // Reset particle after animation
            setTimeout(() => {
                particle.style.transition = 'none';
                particle.style.transform = 'translate(0, 0)';
                setTimeout(() => {
                    animateParticle(particle);
                }, 100);
            }, duration);
        }
        
        // Initialize car rotation
        function initCarRotation(modelId, leftBtnId, rightBtnId) {
            const carModel = document.getElementById(modelId);
            let currentRotation = 0;
            
            document.getElementById(leftBtnId).addEventListener('click', function() {
                currentRotation -= 90;
                carModel.style.transform = `rotateY(${currentRotation}deg)`;
            });
            
            document.getElementById(rightBtnId).addEventListener('click', function() {
                currentRotation += 90;
                carModel.style.transform = `rotateY(${currentRotation}deg)`;
            });
        }
        
        // Initialize gallery auto-scroll
        function initGallery() {
            const galleryTrack = document.getElementById('galleryTrack');
            const galleryItems = galleryTrack.querySelectorAll('.gallery-item');
            const itemWidth = galleryItems[0].offsetWidth + 30; // Width + margin
            let position = 0;
            
            // Clone items for infinite scroll
            galleryItems.forEach(item => {
                const clone = item.cloneNode(true);
                galleryTrack.appendChild(clone);
            });
            
            // Set initial width
            galleryTrack.style.width = `${itemWidth * galleryItems.length * 2}px`;
            
            // Auto scroll
            setInterval(() => {
                position -= 1;
                if (Math.abs(position) >= itemWidth * galleryItems.length) {
                    position = 0;
                }
                galleryTrack.style.transform = `translateX(${position}px)`;
            }, 30);
        }
        
        // Initialize tech specs highlighting
        function initTechSpecs() {
            const specs = document.querySelectorAll('.tech-spec');
            let currentIndex = 0;
            
            // Highlight first spec
            specs[currentIndex].classList.add('active');
            
            // Change active spec every 10 seconds
            setInterval(() => {
                specs[currentIndex].classList.remove('active');
                currentIndex = (currentIndex + 1) % specs.length;
                specs[currentIndex].classList.add('active');
            }, 10000);
        }
